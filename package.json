{
	"name": "@homebridge-nhc2/homebridge-nhc2",
	"version": "2.0.0",
	"description": "Niko Home Control 2 support for Homebridge",
	"license": "MIT",
	"keywords": [
		"Niko Home Control",
		"homebridge-plugin",
		"homebridge"
	],
	"repository": {
		"type": "git",
		"url": "git://github.com/homebridge-nhc2/homebridge-nhc2.git"
	},
	"bugs": {
		"url": "https://github.com/homebridge-nhc2/homebridge-nhc2/issues"
	},
	"engines": {
		"node": ">=11.0.0",
		"homebridge": ">=1.0.0"
	},
	"main": "dist/nhc2-platform.js",
	"files": [
		"LICENSE",
		"dist"
	],
	"dependencies": {
		"@types/node": "^13.13.4",
		"@homebridge-nhc2/nhc2-hobby-api": "^2.0.1",
		"rxjs": "^6.5.5",
		"typescript": "^3.8.3"
	},
	"devDependencies": {
		"homebridge": "^1.1.0",
		"prettier": "^1.19.1",
		"rimraf": "^3.0.2",
		"tslint": "^5.20.1",
		"tslint-config-prettier": "^1.18.0"
	},
	"scripts": {
		"clean": "rimraf ./dist",
		"build": "rimraf ./dist && tsc",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"test": "tslint -p tsconfig.json && npm run build",
		"lint": "tslint -p tsconfig.json --fix",
		"prepare": "npm run build",
		"preversion": "npm run lint",
		"version": "npm run format && git add -A src",
		"postversion": "git push && git push --tags",
		"postpublish": "npm run clean"
	}
}
